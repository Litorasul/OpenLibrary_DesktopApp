<Application x:Class="OpenLibrary_App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenLibrary_App">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#d38b5d"/>
            <Setter Property="Foreground" Value="#2c5530"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#f3ffb6"/>
            <Setter Property="Foreground" Value="#2c5530"/>
            <Setter Property="BorderBrush" Value="#d38b5d"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Background" Value="#f3ffb6"/>
            <Setter Property="Foreground" Value="#2c5530"/>
            <Setter Property="BorderBrush" Value="#d38b5d"/>
        </Style>

        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Visibility" Value="Collapsed" />
        </Style>
    </Application.Resources>
</Application>
